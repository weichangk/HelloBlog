    "version": "0.2.0",
    "configurations": [
		{
			"name": ".NET Core Launch (Blog.Hosting)",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceFolder}/src/Blog.Hosting/bin/Debug/net6.0/Blog.Hosting.dll",
			"args": [],
			"cwd": "${workspaceFolder}/src/Blog.Hosting",
			"stopAtEntry": false,
			"serverReadyAction": {
				"action": "openExternally",
				"pattern": "\\bNow listening on:\\s+(https?://\\S+)"
			},
			"env": {
				"ASPNETCORE_ENVIRONMENT": "Development"
			},
			"sourceFileMap": {
				"/Views": "${workspaceFolder}/Views"
			}
		}
    ]
}